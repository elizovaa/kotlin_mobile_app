<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addproductpage.ProductAddPageFragment">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:fontFamily="sans-serif"
            android:text="Добавление препарата"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите наименование"
            android:inputType="text"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_text"/>

        <EditText
            android:id="@+id/type_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите формат выпуска"
            android:inputType="text"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name_edit_text"/>

        <EditText
            android:id="@+id/amount_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите количество"
            android:inputType="number"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/type_edit_text"/>

        <EditText
            android:id="@+id/dosage_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите дозировку"
            android:inputType="text"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/amount_edit_text"/>

        <EditText
            android:id="@+id/comment_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите комментарий"
            android:inputType="text"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dosage_edit_text"/>

        <Button
            android:id="@+id/cancel_button"
            style="@style/SleepButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="Отменить"
            android:layout_marginBottom="64dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/add_product_button"
            style="@style/SleepButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:layout_marginEnd="64dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cancel_button" />

