<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".addproductpage.ProductAddPageFragment">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="60dp"
            android:text="Добавление препарата"
            android:textColor="@color/text_color"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите наименование"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/type_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите формат выпуска"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/amount_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите количество"
            android:inputType="number"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/dosage_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите дозировку"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/comment_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите комментарий"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/add_product_button"
            style="@style/Buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Добавить" />

